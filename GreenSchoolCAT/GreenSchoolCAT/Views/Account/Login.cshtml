@{
    ViewData["Title"] = "შესვლა";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-4">
        <h2 class="text-center">შესვლა</h2>
        
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @ViewBag.ErrorMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <form asp-action="Login" method="post">
            @Html.AntiForgeryToken()
            <div class="mb-3">
                <label class="form-label">სახელი</label>
                <input name="fullName" class="form-control" placeholder="სახელი და გვარი" required />
                <span class="text-danger">
                    @Html.ValidationMessage("FullName")
                </span>
            </div>
            <div class="mb-3">
                <label class="form-label">პაროლი</label>
                <input name="password" type="password" class="form-control" placeholder="პაროლი" required />
                <span class="text-danger">
                    @Html.ValidationMessage("Password")
                </span>
            </div>
            <button type="submit" class="btn btn-primary w-100">შესვლა</button>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function(){
            setTimeout(function(){
                $(".alert").alert('close');
            }, 5000);
        });
    </script>
}