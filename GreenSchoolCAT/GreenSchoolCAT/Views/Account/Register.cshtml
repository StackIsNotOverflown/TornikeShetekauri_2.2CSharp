@{
    ViewData["Title"] = "Register";
}
<div class="row justify-content-center mt-5">
    <div class="col-md-4">
        <h2 class="text-center">რეგისტრაცია</h2>
        <form asp-action="Register" method="post">
            @Html.AntiForgeryToken()
            <div class="mb-3">
                <label class="form-label">სახელი</label>
                <input name="fullName" class="form-control" placeholder="Your Name" required />
            </div>
            <div class="mb-3">
                <label class="form-label">პაროლი</label>
                <input name="password" type="password" class="form-control" placeholder="Password" required />
            </div>
            <div class="mb-3">
                <label class="form-label">როლი</label>
                <select name="role" class="form-select">
                    <option value="Student">მოსწავლე</option>
                    <option value="Teacher">მასწავლებელი</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary w-100">რეგისტრაცია</button>
        </form>
    </div>
</div>
