@{
    ViewData["Title"] = "პაროლის შეყვანა";
}

<h2>შეიყვანეთ ტესტის პაროლი</h2>
@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @ViewBag.ErrorMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<form asp-action="EnterPasscode" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="testId" value="@ViewBag.TestId" />

    <div class="mb-3">
        <label for="passcode" class="form-label">პაროლი</label>
        <input type="text" name="passcode" class="form-control" required />
        <span asp-validation-summary="ModelOnly" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">დაწყება</button>
</form>
