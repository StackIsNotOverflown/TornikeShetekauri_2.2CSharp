@model GreenSchoolCAT.Models.Question

@{
    var score = ViewBag.Score ?? 0;
    var theta = ViewBag.Theta ?? 0.0;
    var asked = ViewBag.Asked ?? "";
    var testId = ViewBag.TestId ?? Guid.Empty;
}

<form asp-controller="Test" asp-action="Submit" method="post">
    <input type="hidden" name="questionId" value="@Model.Id" />
    <input type="hidden" name="score" value="@score" />
    <input type="hidden" name="theta" value="@theta" />
    <input type="hidden" name="asked" value="@asked" />
    <input type="hidden" name="testId" value="@testId" />

    <h4 class="mb-3">@Model.Text</h4>

    <div class="form-check">
        <input class="form-check-input" type="radio" name="answer" value="@Model.OptionA" required />
        <label class="form-check-label">@Model.OptionA</label>
    </div>

    <div class="form-check">
        <input class="form-check-input" type="radio" name="answer" value="@Model.OptionB" />
        <label class="form-check-label">@Model.OptionB</label>
    </div>

    <div class="form-check">
        <input class="form-check-input" type="radio" name="answer" value="@Model.OptionC" />
        <label class="form-check-label">@Model.OptionC</label>
    </div>

    <div class="form-check">
        <input class="form-check-input" type="radio" name="answer" value="@Model.OptionD" />
        <label class="form-check-label">@Model.OptionD</label>
    </div>

    <button type="submit" class="btn btn-primary mt-3">შემდეგი</button>
</form>
