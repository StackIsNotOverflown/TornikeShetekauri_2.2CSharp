@model List<Task_6.Models.Order>

@{
    ViewData["Title"] = "Orders Overview";
}

<h2 class="mb-3">@ViewData["Title"]</h2>

<p>
    <a href="/Home/ExportToExcel" class="btn btn-success">Export to Excel</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>შეკვეთის ID</th>
            <th>დავალიანება (GEL)</th>
            <th>დავალიანება (USD)</th>
            <th>გადახდილი რაოდენობა</th>
            <th>დარჩენილი გადასახდელი (GEL)</th>
            <th>დარჩენილი გადასაგდელი (USD)</th>
            <th>მიზეზი</th>
            <th>დაწყების დრო</th>
            <th>დედლაინი</th>
            <th>დარჩენილი დრო (დღე)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.XelshekrulebaID</td>
                <td>@order.GadasaxdeliL.ToString("0.00")</td>
                <td>@order.GadasaxdeliD.ToString("0.00")</td>
                <td>@order.ValiL.ToString("0.00")</td>
                <td>@order.GadaxdiliL.ToString("0.00")</td>
                <td>@order.GadaxdiliD.ToString("0.00")</td>
                <td>@(order.Shesruleba ? "კი" : "არა")</td>
                <td>@order.TarigiDawyebis.ToString("yyyy-MM-dd")</td>
                <td>@(order.TarigiDamtavrebis?.ToString("yyyy-MM-dd") ?? "")</td>
                <td>@order.DaysRemaining</td>
            </tr>
        }
    </tbody>
</table>